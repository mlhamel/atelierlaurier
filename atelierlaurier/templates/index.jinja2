{% extends "base.jinja2" %}

{% block title %}Atelier Laurier{% endblock %}

{% block navbar %}
  <div class="navbar navbar-inverse navbar-static-top">
    <div class="container-fluid">
      <div class="navbar-header">
        <a class="navbar-brand" href="/">
          <img src="/static/img/logo3.png" width="150"/>
        </a>
      </div>
      <h2>Atelier Laurier</h2>
      <div id="links-box" class="pull-right">
        <ul class="nav navbar-nav">
          <li><a href="#portfolio">Porfolio</a></li>
          <li><a href="#contact">Contact Us</a></li>
        </ul>
      </div>
    </div>
  </div>
{% endblock %}


{% block content %}
  <br/>
  <a name="contact"></a>
    <div class="container-fluid" style="margin-left: 160px">
      <div class="row">
        <div class="col-md-4">
          <address class="vcard">
            <div class="fn">Micheline Leduc et Olivier Gianolla</div>
            <div class="adr">
              <div class="street-address">5184 St-Dominique</div>
              <div class="locality">Montréal</div>
              <div class="postal-code">H2T 1V2</div>
              <div class="country-name">Québec</div>
            </div>
            <div class="tel">Tel: 514-274-3338</div>
          </address>
        </div>
      </div>
    </div>
  <a name="portfolio"></a>
  <section class="homepage-section portfolio">
    <div class="container-fluid"

      {% for triplet in triplets %}
        <div class="row top30">
          {% for item in triplet %}
            <div class="col-md-4">
              <a class="image" href="/static/img/arts/{{ item }}.png">
                <img width="250" src="/static/img/arts/{{ item }}.png" />
              </a>
            </div>
          {% endfor %}
        </div>

        <div class="row-fluid top30">
          &nbsp;
        </div>
      {% endfor %}

      <div class="row top30">
        <div class="col-md-12 text-center">
          <a class="image" href="/static/img/bonhomme.png">
            <img width="250" src="/static/img/bonhomme.png" />
          </a>
        </div>
      </div>
  </section>
{% endblock %}

{% block footer %}
  <section id="footer" class="homepage-section">
    <div class="container">
      <div class="row text-right">
        <p>Atelier Laurier © 2015</p>
      </div>
    </div>
  </section>
{% endblock %}
